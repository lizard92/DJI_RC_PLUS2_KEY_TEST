<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DJI RC PLUS 2 按键测试"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="2dp">
        
        <TextView
            android:id="@+id/tv_connection_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MSDK注册: 未注册"
            android:textSize="12sp"
            android:textColor="#FF0000" />
        
        <Button
            android:id="@+id/btn_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPS32测试"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:minWidth="60dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="2dp" />

    <!-- 摇杆 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摇杆"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左摇杆"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/tv_left_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水平: 0"
                android:textSize="11sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_left_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="垂直: 0"
                android:textSize="11sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右摇杆"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/tv_right_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水平: 0"
                android:textSize="11sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_right_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="垂直: 0"
                android:textSize="11sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="2dp" />

    <!-- 按钮 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_shutter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快门: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_record_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录像: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_gohome_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返航: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="急停: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_auth_led_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发光按钮: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_custom_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C1: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_custom_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C2: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_custom_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C3: 未按下"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_flight_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="飞行模式开关: 未知"
                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="2dp" />

    <!-- 拨轮 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拨轮"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_left_dial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="左拨轮: 0"
            android:textSize="10sp"
            android:padding="2dp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tv_right_dial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="右拨轮: 0"
            android:textSize="10sp"
            android:padding="2dp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tv_scroll_wheel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="滚轮: 0"
            android:textSize="10sp"
            android:padding="2dp"
            android:textColor="#666666" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="2dp" />

    <!-- 五维按键 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="五维按键"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tv_five_dimension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态: 无"
        android:textSize="10sp"
        android:padding="2dp"
        android:textColor="#666666" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="2dp" />

    <!-- 快捷键 (通过KeyEvent检测) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="快捷键"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="2dp"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_physical_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L1: 未按下"
                android:textSize="9sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_physical_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L2: 未按下"
                android:textSize="9sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_physical_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L3: 未按下"
                android:textSize="9sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_physical_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R1: 未按下"
                android:textSize="9sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_physical_button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R2: 未按下"
                android:textSize="9sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_physical_button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R3: 未按下"
                android:textSize="9sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


